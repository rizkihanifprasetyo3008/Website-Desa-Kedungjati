<section class="profilpedes">
  <div class="shortcut-links" data-aos="fade-up">
    <h4>
      <a href="/" class="links-back">Beranda</a> /
      <a href="#" class="location-now">Profil Perangkat Desa</a>
    </h4>
  </div>
  <div class="profilpedes-all" data-aos="fade-up">
    <div class="profilpedes-left">
      <div class="profilpedes-wrapper">
        <div class="profilpedes-title">
          <h3>Profil Perangkat Desa Kedungjati</h3>
        </div>
        <div class="profilpedes-kategori">
          <div class="profilpedes-kategori-box">
            <button type="button" id="sekretaris-desa" class="sekretaris-desa">
              <h4>Sekretaris Desa</h4>
            </button>
            <button type="button" id="kepala-urusan" class="kepala-urusan">
              <h4>Kepala Urusan</h4>
            </button>
            <button type="button" id="kepala-seksi" class="kepala-seksi">
              <h4>Kepala Seksi</h4>
            </button>
            <button type="button" id="kepala-dusun" class="kepala-seksi">
              <h4>Kepala Dusun</h4>
            </button>
          </div>
        </div>
        <div class="profilpedes-sekretaris-desa" id="profilpedes-sekretaris-desa">
