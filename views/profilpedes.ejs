          </div>
          <div class="profilpedes-info">
            <div class="profilpedes-info-box">
              <h4>Nama</h4>
              <p>:</p>
              <p><%= kaurItem.nama_perangkat %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Tempat, Tanggal Lahir</h4>
              <p>:</p>
              <p><%= kaurItem.ttl %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Jenis Kelamin</h4>
              <p>:</p>
              <p><%= kaurItem.jeniskelamin %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Agama</h4>
              <p>:</p>
              <p><%= kaurItem.agama %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Pendidikan Terakhir</h4>
              <p>:</p>
              <p><%= kaurItem.pendidikan_terakhir %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Jabatan</h4>
              <p>:</p>
              <p><%= kaurItem.jabatan %></p>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="profilpedes-kepalaseksi" id="profilpedes-kepalaseksi">
          <% kasi.forEach(kasiItem => { %>

          <div class="profilpedes-kepalaseksi-title">
            <h3><%= kasiItem.jabatan %></h3>
