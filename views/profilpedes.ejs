              <li><a href="/infrastrukturdesa">Infrastruktur Desa</a></li>
              <li><a href="/petadesa">Peta Desa</a></li>
              <li><a href="/potensidesa">Potensi Desa</a></li>
              <li><a href="/pembangunandesa">Pembangunan Desa</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // kategori button
  let sekretarisDesa = document.getElementById("sekretaris-desa");
  let kepalaUrusan = document.getElementById("kepala-urusan");
  let kepalaSeksi = document.getElementById("kepala-seksi");
  let kepalaDusun = document.getElementById("kepala-dusun");
  let profilpedesSekretarisDesa = document.getElementById("profilpedes-sekretaris-desa");
  let profilpedesKepalaUrusan = document.getElementById("profilpedes-kepalaurusan");
  let profilpedesKepalaSeksi = document.getElementById("profilpedes-kepalaseksi");
  let profilpedesKepalaDusun = document.getElementById("profilpedes-kepaladusun");

  // if kepalaurusan onclick add active class to kepalaurusan, and sekretarisdesa, remove active class from kepala seksi and kepala dusun
  kepalaUrusan.onclick = function () {
    kepalaUrusan.classList.add("active");
    sekretarisDesa.classList.add("active");
    kepalaSeksi.classList.remove("active");
    kepalaDusun.classList.remove("active");
    profilpedesSekretarisDesa.classList.add("active");
    profilpedesKepalaUrusan.classList.add("active");
    profilpedesKepalaSeksi.classList.remove("active");
    profilpedesKepalaDusun.classList.remove("active");
  };
  // same to kepalaseksi
  kepalaSeksi.onclick = function () {
    kepalaSeksi.classList.add("active");
    kepalaDusun.classList.remove("active");
    kepalaUrusan.classList.remove("active");
    sekretarisDesa.classList.add("active");
    profilpedesSekretarisDesa.classList.add("active");
    profilpedesKepalaUrusan.classList.remove("active");
    profilpedesKepalaSeksi.classList.add("active");
    profilpedesKepalaDusun.classList.remove("active");
  };
  // same to kepaladusun
  kepalaDusun.onclick = function () {
    kepalaDusun.classList.add("active");
    kepalaSeksi.classList.remove("active");
    kepalaUrusan.classList.remove("active");
    sekretarisDesa.classList.add("active");
    profilpedesSekretarisDesa.classList.add("active");
    profilpedesKepalaUrusan.classList.remove("active");
    profilpedesKepalaSeksi.classList.remove("active");
    profilpedesKepalaDusun.classList.add("active");
  };
  // same to sekretarisdesa
  sekretarisDesa.onclick = function () {
    sekretarisDesa.classList.remove("active");
    kepalaSeksi.classList.remove("active");
    kepalaUrusan.classList.remove("active");
    kepalaDusun.classList.remove("active");
    profilpedesSekretarisDesa.classList.remove("active");
    profilpedesKepalaUrusan.classList.remove("active");
    profilpedesKepalaSeksi.classList.remove("active");
    profilpedesKepalaDusun.classList.remove("active");
  };
</script>
