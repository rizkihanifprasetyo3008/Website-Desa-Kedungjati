          <div class="profilpedes-sekretaris-desa-title">
            <h3><%= sekdesItem.jabatan %></h3>
          </div>
          <div class="profilpedes-img">
            <img src="img/perangkatdesa/<%= sekdesItem.photo %>" alt="" />
          </div>
          <div class="profilpedes-info">
            <div class="profilpedes-info-box">
              <h4>Nama</h4>
              <p>:</p>
              <p><%= sekdesItem.nama_perangkat %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Tempat, Tanggal Lahir</h4>
              <p>:</p>
              <p><%= sekdesItem.ttl %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Jenis Kelamin</h4>
              <p>:</p>
              <p><%= sekdesItem.jeniskelamin %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Agama</h4>
              <p>:</p>
              <p><%= sekdesItem.agama %></p>
            </div>
            <div class="profilpedes-info-box">
              <h4>Pendidikan Terakhir</h4>
              <p>:</p>
              <p><%= sekdesItem.pendidikan_terakhir %></p>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="profilpedes-kepalaurusan" id="profilpedes-kepalaurusan">
